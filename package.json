{
  "name": "hotel-booking-web",
  "version": "1.0.0",
  "description": "A modern hotel booking web application with full-stack implementation",
  "scripts": {
    "dev:frontend": "npx tailwindcss -i ./src/input.css -o ./dist/output.css --watch",
    "dev:backend": "nodemon server.js",
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "build:frontend": "npx tailwindcss -i ./src/input.css -o ./dist/output.css --minify",
    "start": "node server.js"
  },
  "dependencies": {
    "@heroicons/react": "^2.1.1",
    "@types/react": "^19.1.6",
    "@types/react-dom": "^19.1.6",
    "@types/react-router-dom": "^5.3.3",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "date-fns": "^2.30.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-async-handler": "^1.2.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.3",
    "morgan": "^1.10.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-router-dom": "^7.6.2"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.2",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.4.0"
  }
}
